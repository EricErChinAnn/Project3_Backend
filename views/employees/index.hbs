{{#extends 'base'}}

{{#block 'content'}}
<table class="table mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>

            <th>Edit/Delete</th>
        </tr>

    </thead>
    <tbody>
        {{#each employees}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.username}}
            </td>
            <td>
                {{this.email}}
            </td>
            <td>
                {{this.role.role}}
            </td>
            <td>
                <div class="d-flex flex-column">
                    <a href="#" class="btn btn-primary btn-sm mb-2">Update</a>
                    <a href="/employees/delete/{{this.id}}" class="btn btn-danger btn-sm mb-2">Delete</a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}